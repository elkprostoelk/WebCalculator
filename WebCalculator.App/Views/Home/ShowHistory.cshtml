@model ICollection<Calculation>
<link rel="stylesheet" type="text/css" href="~/css/showhistory.css" />

@{
    ViewData["Title"] = "История результатов";
}
<div class="text-left">
    <h2>История результатов вычислений</h2>
    @if (Model.Count > 0)
    {
        <table border="1" cellpadding="1">
            <tr>
                <th class="expression"><h5>Выражение:</h5></th>
                <th><h5>Результат:</h5></th>
                <th><h5>Дата операции:</h5></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Expression</td>
                    <td>@item.Result</td>
                    <td>@item.CalcDate</td>
                </tr>
            }
        </table>
        <br />
        @using (Html.BeginForm("ClearHistory", "Home", FormMethod.Post))
        {
            <button type="submit">Очистить историю вычислений</button>
        }
    }
    else
    {
        <h3>История пуста!</h3>
    }
</div>